{
  "manifest_version": 2,
  "name": "Smart Viewer for FamilySearch Indexing",
  "version": "0.1",

  "description": "Makes the image viewer in FamilySearch's web indexing tool remember the viewer position for each entry field.",

  "icons": {
    "64": "icons/leaf64.png"
  },

  "browser_action": {
    "browser_style": true,
    "default_icon": "icons/leaf64.png",
    "default_title": "Smart Viewer for FS Indexing",
    "default_popup": "popup/popup.html"
  },

  "content_scripts": [
    {
      "matches": ["*://www.familysearch.org/indexing/batch/*"],
      "js": ["content_scripts/indexing.js"]
    }
  ],

  "web_accessible_resources": [
    "page_scripts/*"
  ]
}
